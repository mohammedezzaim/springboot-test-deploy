<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="commande">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="code" type="VARCHAR(500)"/>
        <column name="total" type="NUMERIC"/>
        <column name="total_payer" type="NUMERIC"/>
        <column name="date_commande" type="TIMESTAMP"/>

        <column name="etat_comande_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="commande"
              baseColumnNames="etat_comande_id"
              referencedTableName="etat_comande"
              referencedColumnNames="id"
              constraintName="fk_commande_etat_comande"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="commande_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/commande/Commande.csv"
            tableName="commande">
      <column name="id" type="NUMERIC"/>
          <column name="code" type="STRING"/>
          <column name="total" type="NUMERIC"/>
          <column name="total_payer" type="NUMERIC"/>
          <column name="date_commande" type="TIMESTAMP"/>
        <column name="etat_comande" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
